{
    "languageserver": {
        "pyright": {
            "command": "pyright",
            "filetypes": [
                "py"
            ]
        },
        "csharp-ls": {
            "command": "csharp-ls",
            "filetypes": [
                "cs"
            ],
            "rootPatterns": [
                "*.csproj",
                ".vim/",
                ".git/",
                ".hg/"
            ]
        },
        "lua": {
            "command": "lua",
            "filetypes": [
                "lua"
            ],
            "settings": {
                "Lua": {
                    "diagnostics": {
                        "globals": [
                            "vim"
                        ]
                    }
                }
            }
        }
    }
}
